void imagenExit(){
     fill(161,255,0);
     rect(10,10,10,10);
     fill(255,0,0);
     textSize(10);
     text ("EXIT", 21, 20);
}

void controlExit (){
  //background (255,255,255);
 if (mousePressed)
  if (mouseButton == LEFTBUTTON){
   if (mouseX > 10 && mouseX < 20 && mouseY > 10 && mouseY < 20){
         background(135,194,243);
     animate (menu);
   }}}
        
void PLAY(){
     background(241,239,55);
  imagenExit();
  controlExit();
   if (mousePressed)
    if (mouseButton == LEFTBUTTON){
   }
    }
